@using ButtonType = Radzen.ButtonType
@inherits BaseButton
@if (ShowButton)
{
    <RadzenButton Icon="add_circle_outline"
                  BusyText="@BusyText"
                  IsBusy="@IsBusy"
                  Click=@OnClick
                  Text="@Text"
                  ButtonType="ButtonType.Button"
                  ButtonStyle="ButtonStyle.Success"
                  Size="@Size"/>
}